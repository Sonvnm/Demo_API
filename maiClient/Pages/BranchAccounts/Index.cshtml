@page
@model maiClient.Pages.BranchAccounts.IndexModel

@{
    ViewData["Title"] = "Account";
}

<h1>Account List</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="row">
    <div class="col-md-10">
        <form method="post" class="row">
            <div class="form-group col-md-6" style="display: inline-block">
                <label class="control-label">Search by Account name:</label>
                <input asp-for="SearchString" class="form-control" />
            </div>
            <div class="form-group col-md-6" style="display: inline-block; margin-top: 30px">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BranchAccount[0].AccountPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BranchAccount[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BranchAccount[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BranchAccount[0].Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BranchAccount) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AccountId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AccountId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AccountId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
